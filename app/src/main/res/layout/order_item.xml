<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/cv"
        style="@style/CardViewStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/status_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <app.nutrimeat.meat.org.nutrimeat.Textview.p_MyCustomTextView_mbold
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:paddingTop="8dp"
                    android:layout_centerInParent="true"
                    android:text="Order Details"
                    android:textColor="@color/primary_text"
                    android:textSize="12sp" />

                <app.nutrimeat.meat.org.nutrimeat.Textview.p_MyCustomTextView
                    android:id="@+id/status_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginBottom="@dimen/dimen8"

                    android:background="@color/green"
                    android:padding="@dimen/dimen8"
                    android:visibility="invisible"
                    android:text="status"
                    android:textColor="@color/white"
                    android:textSize="16sp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/order_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/status_layout"
                android:padding="@dimen/dimen8">

                <app.nutrimeat.meat.org.nutrimeat.Textview.p_MyCustomTextView_mbold
                    android:id="@+id/ordernumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:paddingTop="8dp"
                    android:text="Google"
                    android:textColor="@color/secondary_text"
                    android:textSize="12sp" />

                <app.nutrimeat.meat.org.nutrimeat.Textview.p_MyCustomTextView_mbold
                    android:id="@+id/order_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:paddingTop="8dp"
                    android:text="Google"
                    android:textColor="@color/secondary_text"
                    android:textSize="12sp" />
            </RelativeLayout>

            <View
                android:id="@+id/div1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/order_layout"
                android:layout_marginBottom="@dimen/dimen8"
                android:layout_marginTop="@dimen/dimen8"
                android:background="@color/divider" />

            <RelativeLayout
                android:id="@+id/header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/div1"
                android:background="@drawable/shape_bg_white_rounded_rect"
                android:padding="@dimen/dimen8">


                <app.nutrimeat.meat.org.nutrimeat.Textview.p_MyCustomTextView_mbold
                    android:id="@+id/item_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerInParent="true"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:paddingTop="8dp"
                    android:text="Pixel C"
                    android:textColor="@color/grey_700"
                    android:textSize="12sp" />

                <app.nutrimeat.meat.org.nutrimeat.Textview.p_MyCustomTextView_mbold
                    android:id="@+id/item_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:paddingTop="8dp"
                    android:text="Google"
                    android:textColor="#000000"
                    android:textSize="12sp" />


            </RelativeLayout>


        </RelativeLayout>
    </android.support.v7.widget.CardView>
</FrameLayout>